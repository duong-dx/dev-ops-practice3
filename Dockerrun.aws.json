{
  "AWSEBDockerrunVersion": 2,
  "containerDefinition": [
    {
      "name": "client",
      "image": "duong1200798/multi-client",
      "hostname": "react-client",
      "essential": false
    },
    {
      "name": "server",
      "image": "duong1200798/multi-server",
      "hostname": "api-server",
      "essential": false
    },
    {
      "name": "worker",
      "image": "duong1200798/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "duong1200798/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMapping": [
        {
          "hostPort": "80",
          "containerPort": "80"
        }
      ],
      "links": ["client", "server"]
    }
  ]
}